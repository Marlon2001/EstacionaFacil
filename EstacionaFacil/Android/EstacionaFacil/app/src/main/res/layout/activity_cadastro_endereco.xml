<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CadastroMensalistaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/caixa_pai">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativePai">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="48dp"
            android:id="@+id/linear4">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Endereco"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Logradouro:"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rua Julieta"
                android:textSize="24sp"
                android:id="@+id/txt_endereco_mensalista"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bairro:"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jd. das Rosas"
                android:textSize="24sp"
                android:id="@+id/txt_bairro_mensalista"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Número:"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="3895"
                android:textSize="24sp"
                android:id="@+id/txt_numero_mensalista"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Estado:"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/spinner_estados"
                android:drawSelectorOnTop="true"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cidade:"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecione a cidade"
                android:textSize="24sp"
                android:id="@+id/txt_cidade_mensalista"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descrição:"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Casa da minha mãe"
                android:textSize="24sp"
                android:id="@+id/txt_descricao_mensalista"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear4">

            <Button
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Voltar"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                android:id="@+id/btn_voltar_endereco"/>

            <Button
                android:id="@+id/btn_proximo_endereco"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Próximo"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>