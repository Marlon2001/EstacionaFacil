<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/txt_nome_mensalista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marlon Santos"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                android:paddingTop="4dp"
                android:textSize="26sp"
                android:paddingLeft="4dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/txt_cpf_mensalista"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="185.543.655-56"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                android:paddingTop="4dp"
                android:paddingLeft="4dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_email_mensalista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="marlon@senai.com.br"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="24sp"
                android:paddingTop="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_veiculos_mensalista"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ic_entrada"/>

                <Button
                    android:id="@+id/btn_telefone_mensalista"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ic_telefone"/>

                <Button
                    android:id="@+id/btn_endereco_mensalista"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ic_casa"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

