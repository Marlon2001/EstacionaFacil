<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Modelo do carro"
            android:layout_weight="2"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/txt_modelo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="GTX-5124"
            android:textSize="22sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/colorBlack"
            android:id="@+id/txt_placa"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-05-04 2:25:00"
            android:id="@+id/txt_data_entrada"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />
        <Button
            android:id="@+id/bt_saida"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:background="@drawable/botao_saida"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>