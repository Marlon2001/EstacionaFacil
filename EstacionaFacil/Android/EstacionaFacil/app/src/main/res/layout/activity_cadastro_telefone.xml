<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroMensalistaActivity"
    android:id="@+id/relativePai" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:hint="11 98574-9865"
            android:id="@+id/txt_telefone_mensalista"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo do telefone:"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:hint="Comercial"
            android:id="@+id/txt_tipo_telefone_mensalista"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:text="Voltar"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:id="@+id/btn_voltar_telefone"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Proximo"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:id="@+id/btn_salvar_telefone_mensalista"/>
    </LinearLayout>
</RelativeLayout>