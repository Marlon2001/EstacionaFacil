<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarPrecoActivity"
    android:orientation="vertical"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/txt_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preço atual"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/text_primeira_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primeira hora: "
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_primeira_hora_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 5.00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/linear1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demais horas: "
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/txt_demais_horas_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 5.00"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_below="@id/linear2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Novo preço"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/txt_hora_1_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primeira hora"
            android:inputType="text"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/txt_demais_horas_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Demais horas"
            android:inputType="text"
            android:textSize="24sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cadastro de Preço"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_cadastro_preco"/>
</RelativeLayout>