<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_veiculo_editar"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:paddingVertical="10dp" >

            <TextView
                android:id="@+id/txt_placa_veiculo3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="NDK-5346"
                android:textSize="24dp"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":  "
                android:textSize="24dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_modelo_veiculo3"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Crossfox"
                android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_deletar_veiculo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@mipmap/ic_delete"
        android:layout_alignParentRight="true"/>
</RelativeLayout>